<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择文本样式"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="300dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/font_bold"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/font_bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="#D5D5D5" />

        <ImageView
            android:id="@+id/font_tilt"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/font_tilt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D5D5D5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/font_underline"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/font_underline"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="#D5D5D5" />

        <ImageView
            android:id="@+id/ll_font_large"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:src="@drawable/font_large"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>