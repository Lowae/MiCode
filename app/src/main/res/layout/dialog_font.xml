<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本样式"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        android:layout_below="@id/tv_1"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_font_bold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/font_bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#D5D5D5" />

        <Button
            android:id="@+id/btn_font_italic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/font_italic" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        android:layout_below="@id/linear1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line2"
        android:gravity="center">

        <Button
            android:id="@+id/btn_font_underline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/font_underline"
            android:layout_marginEnd="50dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D5D5D5"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_font_size"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/font_size"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

</RelativeLayout>